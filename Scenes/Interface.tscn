script/source = "extends Control
onready var Global = get_node(\"/root/Global\")

var focus

func _ready():
	$Buttons/Continue.grab_focus()
	DetectedFocus()
func _process(delta):
	Focus()

func DetectedFocus():
	for button in get_tree().get_nodes_in_group(\"Buttons\"):
		if button == get_focus_owner():
			focus = button
			for label in get_tree().get_nodes_in_group(\"Labels\"):
				if str(button.get_path()) + \"/Label\" == str(label.get_path()):
					label.text = \"> \" + label.text
				elif label.text[0] == \">\":
					label.text = (label.text).substr(2, (label.text).length())
func Focus():
	if focus != get_focus_owner():
		DetectedFocus()

func _on_Continue_mouse_entered():
	$Buttons/Continue.grab_focus()
func _on_ToMenu_mouse_entered():
	$Buttons/ToMenu.grab_focus()
	
	#Hide and Show
func _input(event):
	if Input.is_action_just_pressed(\"ESCAPE\"):
		Global.Pause = not Global.Pause
		if Global.Pause:
			$Buttons/Continue.grab_focus()
		visible = not visible

	#Button Pressed
func _on_Continue_pressed():
	Global.Pause = not Global.Pause
	visible = not visible
func _on_ToMenu_pressed():
	Global.Pause = not Global.Pause
	get_tree().change_scene(\"res://Scenes/Control.tscn\")
"

