script/source = "extends Control

onready var paper = load(\"res://Sprites/paper.jpg\")
onready var icon = load(\"res://Sprites/icon.png\")
var focus

func _ready():
	$VBoxContainer/HBoxContainer/VBoxContainer/NewGame.grab_focus()
	DetectedFocus()
func _process(delta):
	Focus()

func _on_NewGame_pressed():
	get_tree().change_scene(\"res://Scenes/Main.tscn\")
func _on_Exit_pressed():
	get_tree().quit()
	
	###OptionsWindow
func _on_Options_pressed():
	SelectedMenu()
	$VBoxContainer/HBoxContainer/CenterContainer/TextureRect.texture = paper
	$Options/Speaker1/Smile.grab_focus()
	$Options.show()
func _on_Save_pressed():
	SelectedMenu()
	$VBoxContainer/HBoxContainer/CenterContainer/TextureRect.texture = icon
	$VBoxContainer/HBoxContainer/VBoxContainer/Options.grab_focus()
	$Options.hide()
	
	###LoadingButtons
func _on_Back_pressed():
	SelectedMenu()
	$VBoxContainer/HBoxContainer/CenterContainer/TextureRect.texture = icon
	$VBoxContainer/HBoxContainer/VBoxContainer/Loading.grab_focus()
	$Loading.hide()
	for child in $Loading/Scroll/VBoxContainer.get_children():
		child.queue_free()
		
	###Menu focus on/off
func SelectedMenu():
	for button in get_tree().get_nodes_in_group(\"MenuButtons\"):
		button.disabled = not button.disabled
		if button.focus_mode == FOCUS_NONE: button.focus_mode = FOCUS_ALL
		else: button.focus_mode = FOCUS_NONE
		
		
func _on_Loading_pressed():
	SelectedMenu()
	$VBoxContainer/HBoxContainer/CenterContainer/TextureRect.texture = paper
	$Loading/Back.grab_focus()
	var dirsave = Directory.new()
	dirsave.open(\"res://Saves/\")
	dirsave.list_dir_begin(true, false)
	var file_name = dirsave.get_next()
	var loadscene = load(\"res://Scenes/Save.tscn\")
	var scene =  loadscene.instance()
	while file_name != \"\":
		$Loading/Scroll/VBoxContainer.add_child(scene)
		scene =  loadscene.instance()
		file_name = dirsave.get_next()
		$Loading/Scroll/VBoxContainer.rect_min_size.y += 100
		print($Loading/Scroll/VBoxContainer.get_children())
	$Loading.show()
		
func DetectedFocus():
	for button in get_tree().get_nodes_in_group(\"Buttons\"):
		if button == get_focus_owner():
			focus = button
			for label in get_tree().get_nodes_in_group(\"Labels\"):
				if str(button.get_path()) + \"/Label\" == str(label.get_path()):
					label.text = \"> \" + label.text
				elif label.text[0] == \">\":
					label.text = (label.text).substr(2, (label.text).length())
func Focus():
	if focus != get_focus_owner():
		DetectedFocus()

	###MouseFocus
func _on_NewGame_mouse_entered():
	$VBoxContainer/HBoxContainer/VBoxContainer/NewGame.grab_focus()
func _on_Loading_mouse_entered():
	$VBoxContainer/HBoxContainer/VBoxContainer/Loading.grab_focus()
func _on_Options_mouse_entered():
	$VBoxContainer/HBoxContainer/VBoxContainer/Options.grab_focus()
func _on_Exit_mouse_entered():
	$VBoxContainer/HBoxContainer/VBoxContainer/Exit.grab_focus()
func _on_Smile_mouse_entered():
	$Options/Speaker1/Smile.grab_focus()
func _on_Save_mouse_entered():
	$Options/Speaker2/Save.grab_focus()
func _on_Back_mouse_entered():
	$Loading/Back.grab_focus()


	### Options
func _on_Smile_toggled(button_pressed):
	var pathto = $VBoxContainer/HBoxContainer/VBoxContainer/NewGame/Label
	if button_pressed == false:
		pathto.text = (pathto.text).substr(0,9)
	else: pathto.text += \" :)\"
"

