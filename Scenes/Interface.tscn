script/source = "extends Control
	
	#Hide and Show
func _input(event):
	if Input.is_action_just_pressed(\"ESCAPE\"):
		Global.Pause = not Global.Pause
		if Global.Pause:
			$Buttons/Continue.grab_focus()
		visible = not visible

	#Button Pressed
func Continue_pressed():
	Global.Pause = not Global.Pause
	visible = not visible
	$Buttons.visible = true
	$SaveMenu.visible = false
	$SaveMenu/LineEdit.text = \"Name of your save\"
func ToMenu_pressed():
	Global.Pause = not Global.Pause
	get_tree().change_scene(\"res://Scenes/Control.tscn\")
func Save_pressed():
	$Buttons.visible = false
	$SaveMenu.visible = true

func _on_Save_pressed():
	Saver.Save_Game($SaveMenu/LineEdit.text)
	$Buttons.visible = true
	$SaveMenu.visible = false
	$SaveMenu/LineEdit.text = \"Name of your save\"
func Back_pressed():
	for i in get_tree().get_nodes_in_group(\"Save\"):
		$Buttons.visible = true
		$SaveMenu.visible = false
	$SaveMenu/LineEdit.text = \"Name of your save\"
"

